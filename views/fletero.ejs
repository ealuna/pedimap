    var picker = $('#datepicker');
    var init = moment().startOf('month').format('YYYY/MM/DD');
    var to = moment().format('YYYY/MM/DD');

    $('#fechas').daterangepicker({
            startDate: moment().startOf('month'),
            endDate: moment(),
            format: 'YYYY/MM/DD',
            locale: {
                format: 'YYYY/MM/DD'
            },
