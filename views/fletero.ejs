    function crearTablaGeneral(data) {
        var liquidado = 0;
        var rechazado = 0;
        var _liquidado = 0;
        var _rechazado = 0;
        console.log(data)
        for (var i = 0; i < data.length; i++) {
            liquidado += data[i].liquidado;
            rechazado += data[i].rechazo;
