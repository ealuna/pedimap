                url: '/terranorte/app/reporte/despacho',
                contentType: "application/json",
                data: JSON.stringify({fechainicial: init, fechafinal: to, fletero: fletero}),
                success: function (result) {
                    crearTablaGeneral(result);
                    //  crearTabla(result);
                }
            }
        );
